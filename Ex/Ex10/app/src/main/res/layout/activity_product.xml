        android:layout_height="wrap_content"
        android:onClick="btnAdd_onClick" />

    <!-- ListView.setAdapter(상세정보인 product_detail) -->
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>